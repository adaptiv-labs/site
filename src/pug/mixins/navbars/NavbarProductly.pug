mixin NavbarProductly 
  nav.navbar.navbar-expand-lg.navbar-light.fixed-top.pt-4.d-block(data-navbar-on-scroll)
    .container
      a.navbar-brand(href='index.html')
        img(src=`${CWD}assets/img/logo.svg`   height="31.97" alt='logo')

      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon 
      #navbarSupportedContent.collapse.navbar-collapse.border-top.border-lg-0.mt-4.mt-lg-0
        ul.navbar-nav.ms-auto.pt-2.pt-lg-0.font-base.align-items-lg-center.align-items-start
          li.nav-item.px-2.px-xl-2
            a.nav-link.fw-medium.fs--1(aria-current='page', href=`#feature`) Product
          li.nav-item.px-2.px-xl-2
            a.nav-link.fw-medium.fs--1(aria-current='page', href=`#validation`) Customers
          li.nav-item.px-2.px-xl-2
            a.nav-link.fw-medium.fs--1(aria-current='page', href=`#superhero`) Pricing
          li.nav-item.px-2.pl-xl-2
            a.nav-link.fw-medium.fs--1.me-3(aria-current='page', href=`#marketing`) Resources
        .d-flex.justify-content-start
          a.btn.btn-secondary-outline.fw-medium( href="#!") Sign In
          a.btn.btn-warning.fw-medium.ms-3( href="#!") Sign Up
